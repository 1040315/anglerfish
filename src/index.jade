doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title Todoアプリ
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/todo.css")

  body(ng-app="App")

    .container(ng-controller="MainController")
      h1 ToDo

      form(ng-submit="addTodo()")
        .input-group
          input.form-control(type="text", required, placeholder="新しい要件を入力", ng-model="newTitle")
          span.input-group-btn
            button.btn.btn-default(type="submit") 追加

      div
        button.btn.btn-success 全て完了/未了
        button.btn.btn-default.active 全部 
          span {{ todos.length }}
        button.btn.btn-default 未了 
          span 2
        button.btn.btn-default 完了 
          span 1
        button.btn.btn-danger 完了アイテムを全て削除

      ul.list-unstyled
        li.todo-item(ng-repeat="todo in todos", ng-class="{done: todo.done}")
          form
            .input-group
              span.input-group-addon
                input(type="checkbox", ng-model="todo.done")
              span.form-control.todo-title {{ todo.title }}
              span.input-group-btn
                button.btn.btn-danger(type="reset") 削除

      //
        li.todo-item.done
          form
            .input-group
              span.input-group-addon
                input(type="checkbox", checked)
              span.form-control.todo-title 完了した ToDo
              span.input-group-btn
                button(type="reset").btn.btn-danger 削除

        li.todo-item.editing
          form
            .input-group
              span.input-group-addon
                input(type="checkbox", checked)
              input(type="text", required, value="編集中の ToDo").form-control
              span.input-group-btn
                button(type="reset").btn.btn-danger 削除

    script(src="/bower_components/angular/angular.min.js")
    script(src="/js/app.js")
