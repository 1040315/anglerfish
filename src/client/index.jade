doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title Todoアプリ
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/todo.css")

  body(ng-app="todoApp")

    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse-1")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#/") Anglerfish ToDo

        .collapse.navbar-collapse#navbar-collapse-1
          ul.nav.navbar-nav.navbar-right
            li(ng-hide="currentUser")
              a(href="#/signup") サインアップ
            li(ng-hide="currentUser")
              a(href="#/login") ログイン
            li(ng-controller="LogoutController as vm", ng-show="currentUser")
              a(href="", ng-click="vm.logout()") ログアウト

    .container
      div(ng-view)

    script(src="/bower_components/angular/angular.min.js")
    script(src="/bower_components/angular-resource/angular-resource.min.js")
    script(src="/bower_components/angular-route/angular-route.min.js")
    script(src="/bower_components/ngstorage/ngStorage.min.js")
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/js/app.js")
    script(src="/js/ngConstants.js")
    script(src="/js/lb-services.js")
    script(src="/js/directives.js")
    script(src="/js/auth.service.js")
    script(src="/js/todo.service.js")
    script(src="/js/todo.controller.js")
    script(src="/js/signup.controller.js")
    script(src="/js/login.controller.js")
    script(src="/js/logout.controller.js")
